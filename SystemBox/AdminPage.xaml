<Page
    x:Class="SystemBox.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Margin="0">
        <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="30" x:Name="textBlock" Text="Admin Bereich" Margin="0,150,0,0" />
        <TextBox RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="30" x:Name="textBox" Text="Benutzername" Margin="0,375,0,0" Width="270" Height="50" TextAlignment="Center"/>
        <TextBox RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="30" x:Name="textBox1" Text="Passwort" Margin="0,425,0,0" Width="270" Height="50" TextAlignment="Center"/>
        <Button RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="20" x:Name="LogIn_Button" Content="LogIn" Margin="0,500,0,0" Width="120" Height="40"/>
        <Button RelativePanel.AlignRightWithPanel="True" FontSize="30" x:Name="Exit_Button" Content="X" Margin="0,12,12,0" FontWeight="Bold" Click="AdminExit_Button_Click"/>


    </RelativePanel>
</Page>
