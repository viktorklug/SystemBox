<Page
    x:Class="SystemBox.GerätKoppeln"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">
        <Button RelativePanel.AlignRightWithPanel="True" FontSize="30" x:Name="Exit_Button" Content="X" Margin="0,12,12,0" FontWeight="Bold" Click="Exit_Button_Click"/>
        <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="textBlock" Text="GerätKoppeln" FontSize="30" Margin="0,150,0,0"/>
        <CheckBox RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="Karte_Drin_CheckBox" Content="Karte eingesetzt" FontSize="30" Margin="0,400,0,0" Checked="Karte_Drin"/>
        <RadioButton RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="Signal_JA_RadioButton" Content="Signal ~ JA" FontSize="30" Margin="0,300,0,0" />
        <RadioButton RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="Signal_NEIN_RadioButton" Content="Signal - NEIN" FontSize="30" Margin="0,350,0,0"/>

    </RelativePanel>
</Page>
