<Page
    x:Class="SystemBox.LadeBildschirm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SystemBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">
        <Button RelativePanel.AlignRightWithPanel="True" FontSize="30" x:Name="Exit_Button" Content="X" Margin="0,12,12,0" FontWeight="Bold" Click="LadeBildschirmExit_Button_Click"/>
        <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" x:Name="textBlock" Text="LadeBildschirm" FontSize="30" Margin="0,150,0,0"/>

    </RelativePanel>
</Page>
